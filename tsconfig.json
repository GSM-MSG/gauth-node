{
  "compilerOptions": {
    "strict": true,
    "module": "ES2015",
    "target": "ES5",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "Node",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
